.container{
  height:60rpx;
  display: inline-flex;
  flex-direction: row;
}
.index-container{
  display: flex;
  flex-direction: row;
  align-items:baseline;
}
.plain{
  font-size:32rpx;
}
.index{
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right:14rpx;
}
.line{
  height:44rpx;
  margin-right:14rpx;
  border-left:1rpx solid #000;
}
.date-container{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.month{
  font-size:24rpx;
  line-height:24rpx;
}
.year{
  font-size:20rpx;
}